@model SampleAspNet.Application.Entities.AnswerDto

@{
    ViewBag.Title = "Update";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        <h2>Update this answer</h2>
        <hr>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        @Html.HiddenFor(model => model.AnswerId)

        <div class="form-group">
            @Html.LabelFor(model => model.QuestionId, new {@class = "col-md-2"})
            <div class="col-md-3">
                @Html.EditorFor(model => model.QuestionId, new {htmlAttributes = new {@class = "form-control mb-3"}})
                @Html.ValidationMessageFor(model => model.QuestionId, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Text, new {@class = "col-md-2"})
            <div class="col-md-3">
                @Html.EditorFor(model => model.Text, new {htmlAttributes = new {@class = "form-control mb-3"}})
                @Html.ValidationMessageFor(model => model.Text, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsSuitable, new {@class = "col-md-2"})
            <div class="col-md-3">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsSuitable)
                    @Html.ValidationMessageFor(model => model.IsSuitable, "", new {@class = "text-danger"})
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsRemoved, new {@class = "col-md-2"})
            <div class="col-md-3">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsRemoved)
                    @Html.ValidationMessageFor(model => model.IsRemoved, "", new {@class = "text-danger"})
                </div>
            </div>
        </div>

        <div class="form-group mt-4">
            <div class="col-md-12">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </div>
    </div>
}

<div class="mt-5">
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}